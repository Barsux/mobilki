<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    >


    <!-- Иллюстрация -->
    <LinearLayout
        android:id="@+id/titleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/NoConnectionIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fork"
            android:contentDescription="@string/noconnection_icon"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/NoConnectionTitle"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/NoConnectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/noconnection"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="24dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/NoConnectionIcon"
            android:layout_marginTop="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/NoConnectionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noconnection_desc"
            android:textColor="@color/gray_700"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/NoConnectionIcon"
            android:layout_marginTop="35.7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/retryButton"
        android:layout_width="match_parent"
        android:text="@string/retry"
        style="@style/PurpleButton"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
