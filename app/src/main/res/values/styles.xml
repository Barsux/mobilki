<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PurpleButton">
        <item name="backgroundTint">@color/appPurple</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="OnboardingButton">
        <item name="backgroundTint">@color/appPurple</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="WhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="SkipButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/appPurple</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="shapeAppearance">@style/RoundedInputCorners</item>
    </style>

    <style name="RoundedInputCorners" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>




</resources>